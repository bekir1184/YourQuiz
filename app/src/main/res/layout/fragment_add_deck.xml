<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_1"
    android:padding="15dp"
    tools:context="screens.AddDeck">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/color_2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/color_1"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/madelina"
                        android:textColor="@color/color_2"
                        android:textSize="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deste Ekle"/>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/color_1"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="15dp"
                    >
                    <EditText
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/madelina"
                        android:textColor="@color/color_2"
                        android:textSize="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Deste adÄ± giriniz"/>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Button
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:fontFamily="@font/madelina"
            android:layout_marginBottom="50dp"
            android:backgroundTint="@color/color_3"
            android:textColor="@color/color_2"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ekle"
            android:textAllCaps="false"
            android:id="@+id/addDeckBtn"/>
    </RelativeLayout>

</FrameLayout>